<!-- Team page -->

<!-- Team title -->
<div class="team-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://source.unsplash.com/random/1000x700');">
  <h1> Team </h1>

  <div class="team-profiles">
    <ul class="list-inline text-center team-avatar-spacing">
      <%[["disha", "cake-connoisseur"], ["luke","lasagne-lover"]].each do |member,title| %>
        <li>
          <%=image_tag "#{member}.jpg", class:"img-circle", width: 200 %>
          <h3><%= member.capitalize %></h3>
          <h4><%= title.capitalize %></h4>
        </li>
      <% end %>
    </ul>
  </div>
</div>
